generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reminder {
  id Int @id @default(autoincrement())

  content  String
  isActive Boolean
  frequncy String

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  @@map("reminders")
}

model Goal {
  id Int @id @default(autoincrement())

  title     String
  checklist GoalChecklist[]

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  @@map("goals")
}

model GoalChecklist {
  id     Int  @id @default(autoincrement())
  goalId Int?

  title    String
  isActive Boolean

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  Goal      Goal?     @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@map("goal_checklist")
}

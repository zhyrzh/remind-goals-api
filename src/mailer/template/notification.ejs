<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Modern HTML Email Template</title>
    <style type="text/css">
      p {
        margin: 0;
      }
      body {
        margin: 0;
        background-color: #ffffff;
      }
      table {
        border-spacing: 0;
      }
      td {
        padding: 0;
      }
      img {
        border: 0;
      }

      .wrapper {
        width: 100%;
        table-layout: fixed;
        background-color: #ffffff;
        padding-bottom: 60px;
      }

      .main {
        background-color: #ffffff;
        margin: 0 auto;
        width: 100%;
        max-width: 600px;
        border-spacing: 0;
        font-family: sans-serif;
        color: #171a1b;
      }

      .two-col {
        /* text-align: s; */
      }

      .two-col .col {
        width: 100%;
        max-width: 600px;
        display: inline-block;
        vertical-align: top;
        text-align: center;
        padding: 8px;
      }

      .two-col .col-xs {
        width: 100%;
        max-width: 50px;
      }

      .reminder-text {
        font-size: 14px;
        text-align: left;
        margin-left: 8px;
      }
    </style>
  </head>
  <body>
    <center class="wrapper">
      <table class="main" width="100%">
        <!-- Accent -->
        <tr>
          <td height="8" style="background-color: #171a1b"></td>
        </tr>

        <!-- Header Text -->
        <tr>
          <td height="10" style="background-color: #ffffff">
            <h1 style="padding: 0; margin-top: 20px; margin-bottom: 2px">
              Hello <%= user %>!
            </h1>
            <p style="padding: 0; margin: 0 0 20px 0; font-size: 14px">
              You have reminders that needs attention. Kindly tend to the
              following reminders listed below:
            </p>
          </td>
        </tr>

        <!-- Reminder List -->

        <% reminders.forEach(function(rmndr){ %>
        <tr>
          <td>
            <table
              width="100%"
              height="25"
              width="100%"
              style="background-color: #f5f5f5; border-radius: 5px"
            >
              <tr>
                <td class="two-col" width="100%">
                  <table class="col" width="100%">
                    <tr>
                      <td><input type="checkbox" id="reminder-checkbox" /></td>
                      <td height="10" width="100%">
                        <p class="reminder-text"><%= rmndr.content %></p>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <% }); %>
      </table>
    </center>
  </body>
  <script>
    const checkbox = document.getElementById('reminder-checkbox');

    checkbox.addEventListener('click', (e) => {
      e.preventDefault();
    });
  </script>
</html>
